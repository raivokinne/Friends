package components

templ PostCreateForm() {
	<form action="/posts" method="POST" autocomplete="off">
		<fieldset class="flex gap-2 w-[500px]">
			<input type="text" name="content" placeholder="What's on your mind?" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500"/>
			<input type="submit" value="Post" class="px-4 py-2 mt-2 text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600"/>
		</fieldset>
	</form>
}
